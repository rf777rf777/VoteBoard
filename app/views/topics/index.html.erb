<p id="notice"><%= notice %></p>

<h1>Voting!!</h1>
<div>
  <%= link_to 'New Topic', new_topic_path ,class: "btn btn-success"%>
</div>
<br>
<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Title </th>
      <!-- <th>Description</th> -->
      <th> 得票數 </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td class="info"><%= link_to topic.title , topic %></td>
        <!-- <td><%= topic.description %></td> -->
        <td class= "danger"><%= topic.votes.count %></td>
        <td class="warning"><%= link_to "Vote!" , upvote_topic_path(topic) , method: :post ,class: "btn btn-info" %></td>
        <!--<td><%= link_to 'Show', topic %></td>-->
        <!--<td><%= link_to 'Edit', edit_topic_path(topic) %></td>-->
        <td class="active"><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

